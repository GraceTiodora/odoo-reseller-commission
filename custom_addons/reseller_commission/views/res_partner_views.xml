<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_partner_form_inherit_commission" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.commission</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='sales_purchases']" position="inside">
                <group string="Commission Settings">
                    <field name="is_agent"/>
                    <field name="is_principal"/>
                    <field name="commission_rate" invisible="not is_agent"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
